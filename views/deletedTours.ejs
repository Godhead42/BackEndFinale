<!DOCTYPE html>
<html lang="eng">
<%- include('head') %>
<body>
<%- include('navbar') %>

<div class="container">
    <h1>Deleted Tours</h1>
    <% deletedTours.forEach(function(entry, index) { %>
        <% if (index % 3 === 0) { %>
        <div class="row">
            <% } %>

            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Course Name: <%= entry.course.courseName %></h5>
                        <p class="card-text">Students: <%= entry.course.students %></p>
                        <p class="card-text">Phone: <%= entry.course.phone %></p>
                        <p class="card-text">Course Rating: <%= entry.course.courseRating %></p>
                        <p class="card-text">Date: <%= entry.course.date %></p>
                        <p class="card-text">Duration: <%= entry.course.duration %></p>
                        <p class="card-text">Price: <%= entry.course.price %></p>
                        <p class="card-text">Level: <%= entry.course.level %></p>
                        <p class="card-text">Temperature: <%= entry.course.temp %></p>
                        <p class="card-text">Condition: <%= entry.course.condition %></p>
                        <p class="card-text">Condition: <%= entry.course.status %></p>
                    </div>
                </div>
            </div>

            <% if ((index + 1) % 3 === 0 || index === deletedTours.length - 1) { %>
        </div>
        <% } %>
    <% }); %>
</div>

<%- include('footer') %>
</body>
</html>
